{
  "$ref": "#/definitions/ComputerAction",
  "definitions": {
    "ComputerAction": {
      "type": "object",
      "properties": {
        "action": {
          "type": "string",
          "enum": [
            "move",
            "click",
            "double_click",
            "right_click",
            "type",
            "hotkey",
            "scroll",
            "hover",
            "drag",
            "wait",
            "screenshot",
            "keypress"
          ]
        },
        "coords": {
          "anyOf": [
            {
              "type": "object",
              "properties": {
                "x": {
                  "type": "number"
                },
                "y": {
                  "type": "number"
                }
              },
              "required": [
                "x",
                "y"
              ],
              "additionalProperties": false
            },
            {
              "type": "null"
            }
          ]
        },
        "selector": {
          "type": [
            "string",
            "null"
          ]
        },
        "text": {
          "type": [
            "string",
            "null"
          ]
        },
        "hotkey": {
          "type": [
            "string",
            "null"
          ]
        },
        "scroll": {
          "anyOf": [
            {
              "type": "object",
              "properties": {
                "deltaX": {
                  "type": "number",
                  "default": 0
                },
                "deltaY": {
                  "type": "number",
                  "default": 0
                }
              },
              "additionalProperties": false
            },
            {
              "type": "null"
            }
          ]
        },
        "wait": {
          "anyOf": [
            {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "ms",
                    "networkidle",
                    "selectorVisible"
                  ]
                },
                "value": {
                  "type": "number"
                },
                "selector": {
                  "type": "string"
                }
              },
              "required": [
                "type"
              ],
              "additionalProperties": false
            },
            {
              "type": "null"
            }
          ]
        },
        "path": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "x": {
                "type": "number"
              },
              "y": {
                "type": "number"
              }
            },
            "required": [
              "x",
              "y"
            ],
            "additionalProperties": false
          }
        },
        "keys": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "action"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}