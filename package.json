{
  "name": "qa-ai-tester",
  "version": "1.0.0",
  "description": "AI-assisted QA system MVP with Playwright computer-use orchestration",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build": "npm run build:frontend && npm run build:backend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "start:dev": "cd backend && npm run start:dev",
    "start:debug": "cd backend && npm run start:debug",
    "dev": "concurrently \"npm run start:dev\" \"cd frontend && npm run dev\"",
    "worker": "cd backend && npm run worker",
    "generate:schema": "cd backend && npm run generate:schema",
    "playwright:test": "cd backend && npm run playwright:test",
    "lint": "cd backend && npm run lint",
    "test": "cd backend && npm run test",
    "test:watch": "cd backend && npm run test:watch"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
